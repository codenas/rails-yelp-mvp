<div class="container text-center">
  <div class="row"></div>
  <h2><%= @restaurant.name %></h2>
  <h6><%= @restaurant.category %></h6>
  <p><%= @restaurant.address %></p>
  <p><%= @restaurant.phone_number %></p>

  <%  @reviews.each do |review| %>
