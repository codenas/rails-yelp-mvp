<div class="container">
<h2>Add a new restaurant</h2>
<%= simple_form_for [@restaurant] do |f| %>
  <%= f.input :name, placeholder: 'Restaurant Name'%>
  <%= f.input :category, placeholder: 'Category', collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.input :address, placeholder: 'Address' %>
  <%= f.input :phone_number, placeholder: 'Phone Number' %>
  <%= f.submit "add a restaurant", class: "btn btn-primary" %>
<% end %>
</div>
